@page "/staffs"

@model StaffsModel



<div class="container-fluid staffPage mt-3 mb-3">
	<div class="text-center main-title">
		OUR FACILITIES
	</div>

	<div class="container">
		<div class="row">
			@foreach (var staff in Model.StaffList)
			{
				<div class="col col-3 d-flex flex-row justify-content-evenly mt-5">
					<div class="d-flex justify-content-center align-items-center p-3 fs-4 border rounded-circle">
											
						<i class="fa-solid fa-user" alt="" class="img-circle styled"> 	</i>
					</div>
					<div class="d-flex flex-column ps-3 justify-content-center">
						<div class="d-flex title">
							@staff.Name 
						</div>
						<div class="d-flex desc">
							@staff.Education
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>

@section Styles{
<link href="~/dist/css/staffs/staffs.min.css" rel="stylesheet" />
}
